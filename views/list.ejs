<%- include('header'); -%>
  <div class="box">
    <h1 id="heading"><%= listTitle %></h1>
  </div>
 
<div class="box">
  
  <% for(var i=0; i< newItem.length; i++){ %>
  
    <div class="item"> 
      <input type="checkbox">
      <p><%= newItem[i] %></p>
    </div>
  
  <% } %>
  <form action="/" method="post" class="item">
    <input type="text" name="item" placeholder="Add a new activity" autocomplete="off">
    <button type="submit" name="list" value="<%= listTitle %>"> + </button>
  </form>

</div>
  
<%- include('footer'); -%>
 
  
